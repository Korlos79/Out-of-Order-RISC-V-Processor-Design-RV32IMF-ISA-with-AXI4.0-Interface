module ConvfromUnsInt(
    input  [31:0] int_in,
    output reg [31:0] float_out
);
    reg [31:0] abs_val;
    reg [7:0] exponent;
    reg [22:0] mantissa;
    integer shift;

    always @(*) begin
        if (int_in == 32'd0) begin
            float_out = 32'd0;
        end else begin
            abs_val = int_in;
            shift = 31 - $clog2(abs_val);
            abs_val = abs_val << shift;
            exponent = 127 + (31 - shift);
            mantissa = abs_val[31:8];
            float_out = {1'b0, exponent, mantissa}; // luÃ´n positive
        end
    end
endmodule
